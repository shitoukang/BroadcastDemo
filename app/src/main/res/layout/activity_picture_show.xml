<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kangy.broadcastdemo.PictureShowActivity"
android:orientation="vertical">
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="下载图片" android:id="@+id/download_image_button"/>
    <ImageView android:layout_width="250dp" android:layout_height="300dp"
    android:id="@+id/image_view"/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/edit_text" android:hint="请输入要下载的图片的url"/>

</LinearLayout>
